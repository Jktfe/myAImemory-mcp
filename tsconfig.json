{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, 
    "types": ["node", "jest", "express"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}